<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Buttons on main page-->
    <style name="funFitButtonMain" parent="funFitButtonMain" >
        <item name="android:width">200dp</item>
        <item name="android:textColor">@color/colorFunFit</item>
    </style>

    <!-- Buttons -->
    <style name="funFitButton" parent="funFitButton" >
        <item name="android:textColor">@color/colorFunFit</item>
    </style>


    <style name="funFitColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:radioButtonStyle">@color/colorFunFit</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
